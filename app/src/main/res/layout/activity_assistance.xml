<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="davidurbina.disasterrelief.AssistanceActivity"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Find Shelter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Shelter"
            android:layout_weight="1"
            android:onClick="onShelterClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Necessities Application"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Necessities"
            android:layout_weight="1"
            android:onClick="onNecessitiesClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="General Assistance Application"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/Assistance"
            android:layout_weight="1"
            android:onClick="onAssistanceClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="APPLY FOR FEMA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRequestFema"
            android:layout_weight="1"
            android:onClick="onFemaAssistance" />
    </LinearLayout>
</LinearLayout>
